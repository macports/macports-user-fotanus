# $Id$

PortSystem          1.0

name                unused_depends
version             0.1
categories          test
platforms           darwin
maintainers         fotanus \
                    gmail.com:fotanus
description         unused_depends
long_description    This program depends from dep_lib and dont uses it.
homepage            www.fotanus.com
master_sites	    www.fotanus.com
distfiles	${name}-${version}.tgz
depends_lib	port:dep_lib

use_configure no
extract.suffix	.tgz

fetch {
	file delete ${prefix}/var/macports/distfiles/${name}/${distfiles}
	file copy ${portpath}/files/${distfiles} ${prefix}/var/macports/distfiles/${name}
}
checksum {}
patch {}
destroot {
	file mkdir ${destroot}${prefix}/bin
	file copy ${build.dir}/unused_depends ${destroot}${prefix}/bin
}
